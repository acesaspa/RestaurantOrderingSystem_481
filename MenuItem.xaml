<UserControl x:Class="RestaurantOrderingSystem_481.MenuItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RestaurantOrderingSystem_481"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#dfed9f">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Source="Resources/stockSalad.jpg" Grid.RowSpan="2"/>
        <TextBlock Grid.Column="1" Grid.Row="0" TextWrapping="Wrap"
                   TextAlignment="Center"
                   Text="Item Description"/>
        <TextBlock Grid.Column="1" Grid.Row="1" TextWrapping="Wrap"
                   TextAlignment="Center"
                   Text="Item Description"/>
        <TextBlock Grid.Column="2" Grid.Row="0"
                   TextWrapping="Wrap" TextAlignment="Center"
                   Text="Item Price"/>

    </Grid>


</UserControl>
